# --- MacOS Process ---
alias appkill='f() {
  local pid
  pid=$(ps aux | sed 1d | fzf -m --header="[kill process]" --preview="echo {}" --preview-window=down:3:wrap | awk "{print \$2}")
  if [ "x$pid" != "x" ]; then
    echo $pid | xargs kill -9
    echo "Killed process(es): $pid"
  fi
}; f'

